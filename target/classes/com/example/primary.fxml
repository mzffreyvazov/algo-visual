<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.PrimaryController">
   <children>
      <Label text="Insertion Sort Visualizer" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Algorithm:" />
            <ComboBox fx:id="algorithmComboBox" prefWidth="150.0" />
         </children>
      </HBox>
      <Pane fx:id="visualizationPane" prefHeight="300.0" prefWidth="600.0" style="-fx-background-color: #f0f0f0;"/>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="generateButton" text="Generate New Array" onAction="#generateNewArray"/>
            <Button fx:id="sortButton" text="Start Sort" onAction="#startSort"/>
            <Button fx:id="resetButton" text="Reset" onAction="#resetArray"/>
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Speed:" />
            <Slider fx:id="speedSlider" min="1" max="10" value="5" blockIncrement="1" />
            <Label text="Size:" />
            <Slider fx:id="sizeSlider" min="10" max="100" value="30" blockIncrement="5" />
         </children>
      </HBox>
      <Button fx:id="primaryButton" text="Switch to Secondary View" onAction="#switchToSecondary"/>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
